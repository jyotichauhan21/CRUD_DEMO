@model List<CRUD_DEMO.Models.Domain.Product>
@{
}

<h1>Product List</h1>
<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Price</th>
			<th> </th>
		</tr>
	</thead>
	<tbody>
		@foreach (var product in Model)
		{
			<tr>
				<td>@product.Id</td>
				<td>@product.Name</td>
				<td>@product.Price</td>
				<td><a href="Products/View/@product.Id">View</a></td>
			</tr>
		}
	</tbody>
</table>